<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrizeList">

    <TextView
        android:id="@+id/TP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/textview_bnw"
        android:gravity="center"
        android:text=" \n總共五條題目\n\n答對一題加 $100   答錯扣 $10\n答對一題加 $200   答錯扣 $20\n答對一題加 $300   答錯扣 $30\n答對一題加 $500   答錯扣 $50\n答對一題加 $1000   答錯扣 $100\n\n最後可以用老虎機進行抽獎\n有可能將你獲得的獎金倍數化\n\n祝你好運!\n"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/textview_bnw"
        android:text="返回首頁"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TP" />
</androidx.constraintlayout.widget.ConstraintLayout>